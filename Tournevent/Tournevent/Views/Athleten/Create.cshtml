@model Tournevent.Models.AthletDaten

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Site.css")
@Styles.Render("~/Content/Add.css")
<h2>Athlet hinzufügen</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bitte erfassen sie die Daten des Athlets</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Vorname, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Vorname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Vorname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nachname, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Nachname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nachname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Jahrgang, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Jahrgang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Jahrgang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Startnummer, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Startnummer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Startnummer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GeschlechtId, htmlAttributes: new { @class = "control-label" })
            <div class="dropdownForm">
                @Html.DropDownList("GeschlechtId", new List<SelectListItem>
                {
                    new SelectListItem { Text = "Weiblich", Value = "1", Selected=(Model.GeschlechtId == 1)},
                    new SelectListItem { Text = "Männlich", Value = "2", Selected=(Model.GeschlechtId == 2)}
                }, new { @class = "wettkampf" })
            </div>
        </div>
        <div class="actionGroup">
            <input type="submit" value="Hinzufügen" class="submit" />
            @Html.ActionLink("Zurück zur Athletenübersicht", "Index", null,
               new { @class = "actionLink" })
        </div>
    </div>
}


   
   

