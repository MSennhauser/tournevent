@model IEnumerable<Tournevent.Models.AthletDaten>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Athleten</h2>

<p>
    @Html.ActionLink("Hinzufügen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vorname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nachname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jahrgang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Startnummer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Geschlecht)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Vorname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nachname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Jahrgang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Startnummer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Geschlecht)
    </td>
    <td>
        @Html.ActionLink("Editieren", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
