@model Tournevent.Models.WahldisziplinDaten

@{
    ViewBag.Title = "CreateWahldisziplin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateWahldisziplin</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>WahldisziplinDaten</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>


    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        @if (Model.ID_Wahldisziplin_Disziplin != null)
        {
            foreach (var item in Model.AvailableDisziplinen)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.ID_Disziplin)
                    </td>
                    <td>
                    </td>
                    <td class="tableActions">
                        @{
                            bool contains = false;
                            foreach (var auswahl in Model.wahldisziplinList)
                            {

                                contains = (item.ID_Disziplin == auswahl.ID_Disziplin);
                            }
                            if (!contains)
                            {
                                @Html.ActionLink("Hinzufügen", "Add", new { disziplinId = item.ID_Disziplin, wahldisziplinId = Model.wahldisziplinID })
                            }
                            else
                            {
                                @Html.ActionLink("Entfernen", "Remove", new { disziplinId = item.ID_Disziplin, wahldisziplinId = Model.wahldisziplinID })
                            }
                        }
                    </td>
                </tr>
            }
        }
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
                        }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
