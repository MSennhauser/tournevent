@model IEnumerable<Tournevent.Models.KategorienDaten>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Site.css")

<h2>Kategorien</h2>

<p>
    @Html.ActionLink("Hinzufügen", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abkuerzung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JahrgangVon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JahrgangBis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Geschlecht)
        </th>
        <th>Aktionen</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.kategorieID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Abkuerzung)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.JahrgangVon)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.JahrgangBis)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Geschlecht)
    </td>
    <td class="tableActions">
        @Html.ActionLink("Edit", "Edit", new {  id=item.kategorieID  }) |
        @Html.ActionLink("Delete", "Delete", new {  id=item.kategorieID })
    </td>
</tr>
    }

</table>
