@model Tournevent.Models.KontoDaten
@{
    ViewBag.Title = "Register";
    Layout = null;
}
@Styles.Render("~/Content/Login.css")
@Styles.Render("~/Content/Site.css")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content">
        <div class="card custom-card">
            <div class="card-header">
                <h1>Konto Erstellen</h1>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Telefon)
                    @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Passwort)
                    @Html.PasswordFor(m => m.Passwort, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Passwort, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPasswort)
                    @Html.PasswordFor(m => m.ConfirmPasswort, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPasswort, "", new { @class = "text-danger" })
                </div>

                <div class="actionGroup">
                    @Html.ActionLink("Zum Login", "Login", null,
                    new { @class = "actionLink" })
                    <button type="submit" class="submit">Weiter</button>
                </div>

            </div>
        </div>
    </div>
}

