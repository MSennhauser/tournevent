<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="sidenav">
        <div class="user">
            @Html.ActionLink("Logout", "Logout", "Login")
        </div>
        <a id="vereinsName" href="">TV Widnau</a>
        @{
            Html.RenderAction("Wettkaempfe", "Layout");
        }

        @{
            Html.RenderAction("Navigation", "Layout");
        }
    </div>
    

    <div class="main">
    </div>

    <div id="myfooter" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tounevent</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

