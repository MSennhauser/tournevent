<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="sidenav">
        <a id="vereinsName" href="">TV Widnau</a>
        @{
            Html.RenderAction("Wettkaempfe", "Layout");
        }
        <select name="wettkämpfe" id="wettkaempfe">
            <option value="none" selected disabled hidden>
                Wettkämpfe
            </option>
            <option value="1">Jugitag 1</option>
            <option value="2">Jugitag 2</option>
            <option value="3">Jugitag 3</option>
            <option value="4">Jugitag 4</option>
        </select>
        @Html.ActionLink("Home", "About");
        <a href="#kategorie">Kategorie</a>
        <a href="#verein">Verein</a>
        <a href="#startnummer">Startnummernsätze</a>
    </div>

    <div class="main">
    </div>

    <div id="myfooter" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meine ASP.NET-Anwendung</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

