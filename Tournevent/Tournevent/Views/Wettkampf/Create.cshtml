@model Tournevent.Models.WettkampfDaten

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/Site.css")
@Styles.Render("~/Content/Add.css")
<h2>Wettkampf hinzufügen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bitte erfassen Sie die Daten des Wettkampfes</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.WettkampfName, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.WettkampfName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WettkampfName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WettkampfArt, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.WettkampfArt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WettkampfArt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="actionGroup">
            <input type="submit" value="Hinzufügen" class="submit" />
            @Html.ActionLink("Zurück", "Index", "Home")
        </div>
    </div>
}


    

